<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="DungeonJournalAbilitySkill" parent="GtkBox">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="valign">center</property>
        <child>
            <object class="GtkLabel" id="skill_label">
                <property name="height_request">32</property>
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="halign">start</property>
                <property name="margin_start">12</property>
                <property name="margin_top">8</property>
                <property name="margin_bottom">8</property>
                <property name="hexpand">True</property>
                <property name="ellipsize">end</property>
                <property name="xalign">0</property>
            </object>
        </child>
        <child>
            <object class="GtkBox">
                <property name="visible">True</property>
                <property name="can_focus">True</property>
                <property name="halign">end</property>
                <property name="valign">center</property>
                <property name="margin_end">12</property>
                <child>
                    <object class="GtkCheckButton" id="skill_proficiency_button">
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="margin_right">8</property>
                    </object>
                </child>
                <child>
                    <object class="GtkSpinButton">
                            <property name="visible">True</property>
                            <property name="can_focus">True</property>
                            <property name="halign">end</property>
                            <property name="valign">center</property>
                            <property name="adjustment">skill_save_entry</property>
                            <property name="update_policy">if-valid</property>
                    </object>
                </child>
            </object>
        </child>
    </template>

    <object class="GtkAdjustment" id="skill_save_entry">
        <property name="lower">-50</property>
        <property name="upper">50</property>
        <property name="value">0</property>
        <property name="step_increment">1</property>
        <property name="page_increment">10</property>
    </object>
</interface>